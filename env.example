# QR Studio Environment Configuration

# Environment
ENV=production
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# CORS Origins (comma-separated)
CORS_ORIGINS=https://qr-studio.com,https://www.qr-studio.com

# API Configuration
VITE_API_URL=https://api.qr-studio.com

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
MIN_QR_SIZE=200
MAX_QR_SIZE=2048

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Global requests per minute
QR_GENERATION_LIMIT=20   # QR generations per minute
URL_VALIDATION_LIMIT=50  # URL validations per minute

# Redis Configuration
REDIS_URL=redis://redis:6379

# Ports
FRONTEND_PORT=80
BACKEND_PORT=8000

# Build Information (optional)
BUILD_DATE=
VCS_REF=
VERSION=1.0.0

# SSL Configuration (if using nginx-proxy)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/qr_studio

# Storage (for future use)
AWS_BUCKET=qr-studio-assets
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
